{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":URL:",
							":BLANK_LINE:",
							":BLANK_LINE:",
							":NODE:",
							":BUN:",
							":BLANK_LINE:",
							":BLANK_LINE:",
							":PACKAGE_WITH_PROTOCOL:",
							":PACKAGE:",
							":BLANK_LINE:",
							":BLANK_LINE:",
							":ALIAS:",
							"@repo/**",
							":BLANK_LINE:",
							":BLANK_LINE:",
							":PATH:",
							":BLANK_LINE:"
						]
					}
				},
				"recommended": true,
				"useSortedAttributes": "on",
				"useSortedKeys": "off",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineEnding": "lf",
			"lineWidth": 80
		},
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**"
		],
		"maxSize": 7340032
	},
	"formatter": {
		"attributePosition": "auto",
		"bracketSpacing": true,
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 100,
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"attributePosition": "multiline",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"enabled": true,
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "none"
		},
		"globals": [
			"React"
		]
	},
	"linter": {
		"domains": {
			"next": "all",
			"react": "all",
			"test": "recommended"
		},
		"enabled": true,
		"rules": {
			"a11y": {
				"noStaticElementInteractions": "off",
				"recommended": true
			},
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"noUndeclaredDependencies": "off",
				"recommended": true
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "warn",
					"options": {
						"functions": [
							"clsx",
							"cva",
							"cn"
						]
					}
				}
			},
			"performance": {
				"recommended": true
			},
			"recommended": true,
			"security": {
				"recommended": true
			},
			"style": {
				"noInferrableTypes": "error",
				"noParameterAssign": "error",
				"noUnusedTemplateLiteral": "error",
				"noUselessElse": "error",
				"useAsConstAssertion": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": [
							"camelCase",
							"export"
						],
						"requireAscii": true,
						"strictCase": true
					}
				},
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error"
			},
			"suspicious": {
				"noConsole": {
					"level": "warn",
					"options": {
						"allow": [
							"assert",
							"error",
							"info",
							"warn",
							"debug",
							"time",
							"timeEnd",
							"trace"
						]
					}
				},
				"noFallthroughSwitchClause": "error",
				"noReactSpecificProps": "off",
				"recommended": true
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}