{
	"compilerOptions": {
		"allowJs": true,
		/* Path Aliases */
		"baseUrl": ".",
		"checkJs": true,
		/* Base Options: */
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		/* Bundled projects */
		"lib": [
			"dom",
			"dom.iterable",
			"ES2022"
		],
		"module": "ESNext",
		 "allowImportingTsExtensions": true,
   	"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@prisma/client": ["generated/client/client"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		/* Strictness */
		"strict": true,
		"target": "es2022",
		"verbatimModuleSyntax": true
	},
	"exclude": [
		"node_modules",
		"prisma/generated"
	],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.cjs",
		"**/*.js",
		".next/types/**/*.ts"
	]
}